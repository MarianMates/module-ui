<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="checkout" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="content">
            <referenceBlock name="checkout.root">
                <arguments>
                    <argument name="jsLayout" xsi:type="array">
                        <item name="components" xsi:type="array">
                            <item name="checkout" xsi:type="array">
                                <item name="children" xsi:type="array">
                                    <item name="steps" xsi:type="array">
                                        <item name="children" xsi:type="array">
                                            <item name="billing-step" xsi:type="array">
                                                <item name="children" xsi:type="array">
                                                    <item name="payment" xsi:type="array">
                                                        <item name="children" xsi:type="array">
                                                            <item name="payments-list" xsi:type="array">
                                                                <item name="children" xsi:type="array">
                                                                    <item name="before-place-order" xsi:type="array">
                                                                        <item name="children" xsi:type="array">
                                                                            <!-- The payment form -->
                                                                            <item name="payment-form" xsi:type="array">
                                                                                <item name="sortOrder" xsi:type="string">0</item>
                                                                                <item name="component" xsi:type="string">Magento_UiComp/js/view/payment-form</item>
                                                                                <item name="config" xsi:type="array">
                                                                                    <item name="template" xsi:type="string">Magento_UiComp/payment-form</item>
                                                                                </item>
                                                                                <!-- The children of the payment form -->
                                                                                <item name="children" xsi:type="array">
                                                                                     <item name="payment-form-fieldset" xsi:type="array">
                                                                                        <item name="component" xsi:type="string">uiComponent</item>
                                                                                        <item name="displayArea" xsi:type="string">payment-form-fields</item>
                                                                                        <item name="children" xsi:type="array">
                                                                                            <item name="paymentFormTextarea" xsi:type="array">
                                                                                                <item name="component" xsi:type="string">Magento_Ui/js/form/element/textarea</item>
                                                                                                <item name="config" xsi:type="array">
                                                                                                    <item name="template" xsi:type="string">ui/form/field</item>
                                                                                                    <item name="elementTmpl" xsi:type="string">Magento_UiComp/required-textarea</item>
                                                                                                </item>
                                                                                                <item name="provider" xsi:type="string">checkoutProvider</item>
                                                                                                <item name="dataScope" xsi:type="string">paymentFormTextarea</item>
                                                                                                <item name="label" xsi:type="string" translate="true">Name of textarea</item>
                                                                                                <item name="validation" xsi:type="array">
                                                                                                    <item name="required-entry" xsi:type="string">true</item>
                                                                                                </item>
                                                                                            </item>
                                                                                        </item>
                                                                                     </item>
                                                                                </item>
                                                                            </item>
                                                                        </item>
                                                                    </item>
                                                                </item>
                                                            </item>
                                                        </item>
                                                    </item>
                                                </item>
                                            </item>
                                        </item>
                                    </item>
                                </item>
                            </item>
                        </item>
                    </argument>
                </arguments>
            </referenceBlock>
        </referenceContainer>
    </body>
</page>
